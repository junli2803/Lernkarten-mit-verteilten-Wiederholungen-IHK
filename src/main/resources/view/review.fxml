<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="10"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ReviewController"
      alignment="TOP_CENTER">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- Question row -->
    <HBox spacing="5" alignment="CENTER">
        <Label text="Question:" styleClass="frage"/>
        <Label fx:id="questionLabel" wrapText="true" maxWidth="800" styleClass="frage"/>
    </HBox>

    <!-- Show answer -->
    <Button fx:id="showAnswerButton" text="Show Answer"/>

    <!-- Answer text -->
    <TextArea fx:id="answerArea" prefRowCount="6" wrapText="true" visible="false" maxWidth="800"/>

    <!-- Rating buttons 0..5 -->
    <HBox spacing="8" alignment="CENTER">
        <Label text="Rating:"/>
        <Button fx:id="btnQ0" text="0"/>
        <Button fx:id="btnQ1" text="1"/>
        <Button fx:id="btnQ2" text="2"/>
        <Button fx:id="btnQ3" text="3"/>
        <Button fx:id="btnQ4" text="4"/>
        <Button fx:id="btnQ5" text="5"/>
    </HBox>

    <!-- Correct / Timer / Pause -->
    <HBox spacing="10" alignment="CENTER">
        <CheckBox fx:id="correctCheck" text="Correct"/>
        <Label text="Time:"/>
        <Label fx:id="timerLabel" text="0:00"/>
        <!-- Pause/Resume button (Space also toggles) -->
        <Button fx:id="pauseButton" text="Pause ⏸" onAction="#onPauseResume"/>
    </HBox>

    <!-- Notes -->
    <TextArea fx:id="notesArea" promptText="Notes (optional)" prefRowCount="2" maxWidth="800"/>

    <!-- Prev / Progress / Next -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="prevButton" text="◀ Previous"/>
        <Label fx:id="progressLabel" text="0/0"/>
        <Button fx:id="nextButton" text="Next ▶"/>
    </HBox>

    <Separator/>

    <!-- Bottom stats -->
    <HBox spacing="20" alignment="CENTER">
        <Label text="Reps:"/><Label fx:id="repetitionsLabel" text="0"/>
        <Label text="Avg Time:"/><Label fx:id="avgDurLabel" text="0:00"/>
        <Label text="Avg Rating:"/><Label fx:id="avgRatingLabel" text="0.0"/>
        <Label text="Correct:"/><Label fx:id="correctRateLabel" text="0%"/>
    </HBox>
</VBox>
